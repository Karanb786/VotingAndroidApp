<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="187dp"
            android:contentDescription="Modi Image"
            android:src="@drawable/high1" />

        <TextView
            android:id="@+id/narendra_tv"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_margin="8dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp"/>
        <Button
            android:id="@+id/narendra_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modi"
            android:textAllCaps="true"
            android:onClick="narendra"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="187dp"
            android:contentDescription="Rahul Image"
            android:src="@drawable/rahul" />

        <TextView
            android:id="@+id/rahul_tv"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_margin="8dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp"/>
        <Button
            android:id="@+id/rahul_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rahul Baba"
            android:textAllCaps="true"
            android:onClick="rahulbaba"
            />
    </LinearLayout>

</LinearLayout>



